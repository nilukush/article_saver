{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "../node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "../shared/**/*",
        "scripts/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}