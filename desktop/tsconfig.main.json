{
    "compilerOptions": {
        "noEmit": false,
        "outDir": "dist/main",
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        },
        "types": ["node", "electron"]
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "src/renderer/**/*"
    ]
}