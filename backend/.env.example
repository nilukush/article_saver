# Article Saver Backend Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/article_saver"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3003
NODE_ENV="development"
CORS_ORIGIN="http://localhost:19858"

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Pocket Integration (Optional)
POCKET_CONSUMER_KEY="your-pocket-consumer-key"

# WebAuthn Configuration (Optional)
WEBAUTHN_RP_NAME="Article Saver"
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_ORIGIN="http://localhost:19858"

# Logging Configuration
LOG_LEVEL="info"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES="14d"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS=true

# Performance Configuration
MAX_CONCURRENT_EXTRACTIONS=5
EXTRACTION_BATCH_SIZE=50
EXTRACTION_RETRY_DELAY=2000

# Background Job Configuration
ENABLE_BACKGROUND_JOBS=true
JOB_CLEANUP_INTERVAL=3600000  # 1 hour

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@example.com"
SMTP_PASS="your-app-specific-password"
EMAIL_FROM="Article Saver <noreply@articlesaver.com>"
EMAIL_REPLY_TO="support@articlesaver.com"

# Email Rate Limiting
EMAIL_RATE_LIMIT_MAX=50
EMAIL_RATE_LIMIT_WINDOW_MS=3600000  # 1 hour

# Analytics Configuration (Future Feature)
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY="your-analytics-key"

# Storage Configuration (Future Feature)
# STORAGE_TYPE="local"  # Options: local, s3, gcs
# STORAGE_PATH="./uploads"
# S3_BUCKET="article-saver-uploads"
# S3_REGION="us-east-1"

# API Versioning
API_VERSION="v1"

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Article Saver is currently undergoing maintenance. Please check back soon."
